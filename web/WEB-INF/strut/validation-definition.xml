<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE form-validation PUBLIC
     "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
     "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">
     
<form-validation>
   <global>
      <constant>
        <constant-name>phone</constant-name>
        <constant-value>^\(?(\d{3})\)?[-| ]?(\d{3})[-| ]?(\d{4})$</constant-value>
      </constant>
      <constant>
        <constant-name>zip</constant-name>
        <constant-value>^\d{5}\d*$</constant-value>
      </constant>
      <constant>
        <constant-name>password</constant-name>
        <constant-value>^[a-zA-Z0-9]*[0-9][a-zA-Z0-9]*$</constant-value>
      </constant>
      <constant>
        <constant-name>integer</constant-name>
        <constant-value>^[0-9]+$</constant-value>
      </constant>      
      <constant>
        <constant-name>dateFormat</constant-name>
        <constant-value>yyyy/MM/dd</constant-value>
      </constant>      
      <constant>
        <constant-name>faxNumber</constant-name>
        <constant-value>^[!#%*+,0123456789;@ABCDFPTUW\^abcdfptuw]+$</constant-value>
      </constant>      
      
      
   </global>
</form-validation>
